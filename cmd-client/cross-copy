#!/bin/bash

SERVER=http://localhost:8080/api

if [ $# == 1 ]; then
  curl $SERVER/$1
elif [ $# == 2 ]; then
  curl -X PUT -d "$2" $SERVER/$1
else
  echo "wrong number of arguments. usage:"
  echo "   $ cross-copy my-secred-code              # to receive data"
  echo "   $ cross-copy my-secred-code 'some data'  # to send data"
fi
